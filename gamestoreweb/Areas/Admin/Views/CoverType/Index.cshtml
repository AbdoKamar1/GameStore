@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notifctaion" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List </h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New CoverType
            </a>

        </div>
    </div>
    <br/> <br/>

<table class="table table-bordered table-striped"style="width:100%">
    <thead>
        <tr>
            <th>
                    CoverType Name
            </th>
           <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var Obj in Model)
        {
            <tr>
                <td width="50%">
                    @Obj.Name

                </td>
               <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@Obj.Id" class="btn btn-primary ms-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@Obj.Id" class="btn btn-danger ms-2"> <i class="bi bi-pencil-square"></i>Delete</a>

                    </div>
                </td>
                <td>
                </td>
                </tr>
        }
    </tbody>
</table>

</div>